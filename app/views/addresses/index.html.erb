<div class="row">
  <h3 class="title">配送先登録/一覧</h3>
  <%= render 'layouts/error_message', model: @address %>
  <%= render 'form', customer: @customer, addresses: @addresses %>

</div>

<div class="row">
  <div class="col-xs-9">
        <% if @addresses.count != 0 %>

              <table class = "table" style ="margin-top: 50px;">

                <thead>
                 <tr>
                  <th>郵便番号</th>
                  <th>住所</th>
                  <th>宛名</th>
                 </tr>
                </thead>
                <tbody>
                     <% @addresses.each do |address|%>
                               <tr>
                                 <td><%= address.postcode %></td>
                                 <td><%= address.address %></td>
                                 <td><%= link_to "編集する",edit_customer_address_path(@customer,address),class: "button btn-primary" %>
                                     <%= link_to "削除する",customer_address_path(@customer,address),method: :delete, "date-confirm" => "本当に削除しますか",class: "button btn btn-danger" %>
                                     </td>

                               </tr>
                     <% end %>
                </tbody>
              </table>

        <% else %>

              <p style="margein-top: 100px;">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>配送先は登録されてません。
              </p>

        <% end %>

  </div>
</div>


















