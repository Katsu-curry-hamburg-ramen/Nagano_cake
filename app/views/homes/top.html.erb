  <div class="row">
    <div class="col-2">
    </div>
    <div class="col-1">
      <%= render 'layouts/search_side_bar', genres: @genres %>
    </div>
    
    <div class="col-7">
      <div class="mb-0 d-flex align-items-center justify-content-center">
        <%= image_tag('logo_b.png') %>
      </div>
        <h3 class="m-4">新着商品</h3>


      <div class="items">
        <div class="row">
      <% @items.each do |item| %>
      
        <div class="col-3 p-2">
        <%= link_to public_item_path(item.id) do %>
          <%= image_tag item.get_product_image(200,200)%>
        <% end %><br>
        <%= item.name %><br>
      <% if item.is_active == true %>
        <%= item.price %>円
      <% end %>
        <% if item.is_active == true %>
          販売中
        <% else %>
          売切れ
        <% end %>
        </div>
      <% end %>
      
      </div>
    </div>
          
 
