<div class="row my-5">
  <div class="col-4">
  </div>
  <div class="col-4">
    <h3 class="bg-light w-75 text-center">
      <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細
    </h3>
  </div>
  <div class="col-4">
  </div>
</div>

<div class="row">
  <div class="col-4">
  </div>
  <div class="col-4">
    <table class="table">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postcode %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.phone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_deleted == false %>
            <a class="text-success font-weight-bold">有効</a>
          <% else %>
            <a class="text-secondary">退会</a>
          <% end %>
        </td>
      </tr>
    </table>
      <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success ml-4" %>
      <%= link_to "注文履歴一覧を見る", class:"btn btn-primary ml-4" %>
  </div>
  <div class="col-4">
  </div>
</div>