<div class="container">
    <div class="row">
        <div clas="col-12">
            <h2 class="my-4">ジャンル編集</h2>
            <%= form_with url: admin_genre_path(@genre), model: @genre do |f| %>
                <table class="table table-borderless">
                    <tr>
                        <th><%= f.text_field :genrename, class:"form-control", placeholder:"ジャンル名" %></th>
                        <td><%= f.submit "変更を保存", class:"btn btn-danger" %></td>
                    </tr>
                </table>
            <% end %>
        </div>
    </div>
</div>