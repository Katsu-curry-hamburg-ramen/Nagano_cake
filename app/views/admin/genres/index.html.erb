<div class="container">
    <div class="row">
        <div clas="col-12">
            <h2 class="my-4">ジャンル一覧・追加</h2>
            <%= form_with url: admin_genres_path(@genre), model: @genre do |f| %>
                <table class="table table-borderless">
                    <tr>
                        <th><%= f.text_field :genrename, class:"form-control", placeholder:"ジャンル名" %></th>
                        <td><%= f.submit "新規登録", class:"btn btn-danger" %></td>
                    </tr>
                </table>
            <% end %>
        </div>
    </div>
    <div class="row">
        <table class="table">
            <% @genres.each do |genre| %>
                <tr>
                    <th><%= genre.genrename %></th>
                    <td><%= link_to "編集", edit_admin_genre_path(genre), class:"btn btn-danger py-1" %></td>
                </tr>
            <% end %>
        </table>
    </div>
</div>