<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h5>注文履歴詳細</h5>
      <label>購入者</label>
      <%= link_to @order.name, admin_customer_path(@order.customer_id) %><br>

      <label>注文日</label>
      <%= @order.created_at.to_s(:datetime_jp) %><br>

      <label>配送先</label>
      <%= @order.address %><br>

      <label>支払方法</label>
      <%= @order.payment_method_i18n %><br>

      <label>注文ステータス</label>
      <%= form_with model: @order, url: admin_order_path(@order.id) do |f| %>
        <%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]} %>
        <%= f.submit '更新', class: 'btn btn-success' %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
              <tr>
                <td><%= order_item.item.name %></td>
                <td><%= order_item.item.add_tax_price %></td>
                <td><%= order_item.quantity %></td>
                <td><%= order_item.item.add_tax_price * order_item.quantity %></td>
                <td>
                  <%= form_with model: order_item, url: admin_order_item_path(order_item.id) do |f| %>
                    <%= f.select :status, OrderItem.statuses.keys.map {|k| [I18n.t("enums.order_item.status.#{k}"), k]} %>
                    <%= f.submit '更新', class: 'btn btn-success' %>
                  <% end %>
                </td>
              </tr>
          <% end %>
        </tbody>
      </table>
      <label>商品合計</label><% @total = 0 %>
      <span><% @order.order_items.each do |order_item|%>
            <% @total += order_item.total_payment %>
             <% end %>
             <%= @total %></span><br>
      <label>送料</label>
      <span><%= @order.postage %></span><br>
      <label>請求額合計</label>
      <span><%= @total += @order.postage %></span>
    </div>
  </div>
</div>