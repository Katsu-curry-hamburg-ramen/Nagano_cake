<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>

    <div class="row">
      <tbody>
      <%= form_with model: @item, url:admin_items_path(@item.id) do |f| %>
        <div class="col-xs-4">
          <%= f.file_field :product_image, placeholder:"商品画像", accept: "image/*" %>
        </div>
    
        <div class="col-xs-8">
          <tr>
          <td>商品名 <%= f.text_field :name %> </td>
          <td>商品説明 <%= f.text_area :body, size: 25 %> </td>
          <td>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :genrename %> </td>
          <td>税抜価格 <%= f.text_field :price %>円 </td>
          <td>販売ステータス <%= f.select :validation, {"販売中": true, "売り切れ": false} %> </td>
            <%= f.submit "変更を保存",class: "btn btn-primary" %>
          </tr>
          </div>
      <% end %>
      </tbody>  
    </div>
</div>
