<div class="container">
  <div class="row">
    <h4>商品編集</h4>
  </div>

    <div class="row">
      <%= form_with model: @item, url:admin_items_path(@item.id) do |f| %>
        <div class="col-xs-4">
          <%= f.file_field :product_image, placeholder:"商品画像", accept: "image/*" %>
        </div>
    
        <div class="col-xs-8">
          <p>商品名 <%= f.text_field :name %> </p>
          <p>商品説明 <%= f.text_area :introduction, size: 25 %> </p>
          <p>ジャンル <%= f.collection_select :genre_id, Genre.all, :id, :name %> </p>
          <p>税抜価格 <%= f.text_field :price %>円 </p>
          <p>販売ステータス <%= f.select :validation, {"販売中": true, "売り切れ": false} %> </p>
            <%= f.submit "変更を保存",class: "btn btn-primary" %>
          </div>
        <% end %>
    </div>
</div>
