<div class="row">
    <div class="col-4">
    </div>
    <div class="col-4">
      <h2 class="my-4">商品編集</h2>
    </div>
    <div class="col-4">
    </div>
  </div>
  <%= flash.now[:alert] %>
  <div class="row">
    <div class="col-4">
    </div>
        <%= form_with model: @item, url:admin_item_path(@item.id) do |f| %>
          <table class="table">
            <tr>
              <th>商品画像</th>
              <td><%= f.file_field :product_image, placeholder:"商品画像", accept: "image/*"%></td>
            </tr>
            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class:"form-control" %></td>
            </tr>
            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :body, size: 25, class:"form-control" %></td>
            </tr>
            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select :genre_id, Genre.all, :id, :genrename %></td>
            </tr>
            <tr>
              <th>税抜価格</th>
              <td><%= f.text_field :price, class:"form-control" %>円</td>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, {"販売中": true, "販売停止中": false} %></td>
            </tr>
          </table>
      <div class="col-4">
      </div>
    <div class="row">
      <div class="col-4">
      </div>
      <div class="col-4">
        <%= f.submit "変更を保存",class: "btn btn-primary btn-block" %>
        <% end %>
      </div>
      <div class="col-4">
      </div>
    </div>