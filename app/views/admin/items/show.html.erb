<div class="container">
  <div class="row">
    <h2>商品詳細</h2>
    <div class="row">
		  <div class="col-xs-4">
			<%= image_tag @item.get_product_image(200,200) %>
		  </div>
		    <div class="col-xs-8">
			  <div class="table-responsive">
				<table class="table text-nowrap">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.body %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.genrename %></td>
          </tr>
          <tr>
            <td>税込価格</td><br><td>(税抜価格)</td>
            <td><%#= money_notation(@item.price*1.1) %>(<%#= money_notation(@item.price) %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><% if @item.is_active == true %>
    						<%= "販売中" %>
    						<% else %>
    						<%= "販売停止中" %>
    						<% end %>
    				</td>
          </tr>
        </tbody>
        </table>
        </div>
        </div>
    </div>
  </div>
  <div class="row">
		<div class="text-right">
			<%= link_to "編集", edit_admin_item_path(@item.id), class: "btn btn-primary" %>
		</div>
	</div>
</div>