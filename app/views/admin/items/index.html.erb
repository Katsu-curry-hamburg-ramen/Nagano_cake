<div class='container'>
 <div class="row">
  <div class="col-10 py-3">
    <h2>商品一覧</h2>
    <%= link_to "+", new_admin_item_path, class: " btn btn-default bg-danger text-white", style: "border-radius: 100%" %>
  </div>
 </div>
    <div class="col-xs-10 col-xs-offset-1 py-3">
    <table class='table'>
      <thead>
        <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre.genrename %></td>
            <td><% if item.is_active == true %>
    								<%= "販売中" %>
    								<% else %>
    								<%= "販売停止中" %>
    								<% end %>
    				</td>
          </tr>
        <% end %>
      </tbody>
      </table>
　 </div>
  </div>
 </div>
</div>
<div class="row">
		<div class="col-xs-8 col-xs-offset-2">
			<div class="text-center">
				<%#= paginate @items %>
			</div>
		</div>
	</div>
</div>