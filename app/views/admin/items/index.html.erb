<div class='container px-5 px-sm-0'>
 <div class="row">
  <div class="col-md-3">
<h2>商品一覧</h2>
<table class='table'>
  <thead>
    <tr>
    <th>商品ID</th>
    <th>商品名</th>
    <th>税抜価格</th>
    <th>ジャンル</th>
    <th>ステータス</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%=  money_notation(item.price*1.1) %></td>
        <td><%= item.genre.name %></td>
        <td><% if item.validation == true %>
								<%= "販売中" %>
								<% else %>
								<%= "販売停止中" %>
								<% end %>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
 </div>
</div>