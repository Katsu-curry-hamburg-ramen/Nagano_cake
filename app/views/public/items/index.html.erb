<div class="container">
  <div class="row">
      <div class="col-xs-2">
      </div>
    <div class="col-xs-10">
      <h3>商品一覧（全<%= @quantity %>件）</h3>
      <% @items.each do |item| %>
        <div class="col-xs-3 text-center ">
            <%= link_to item_path(item.id) do %>
              <%= image_tag item, :get_product_image(200,200)%><br>
            <% end %>
            <%= item.name %><br>
            <% if item.validation == true %>
                <%= item.price %>円     
            <% end %>
            <% if item.validation == true %>
                販売中
            <% else %>
                売切れ
            <% end %>
        </div>
      <% end %>
      
      <div class="col-xs-6 col-xs-offset-3 ">
        <!--</%= paginate @items %>-->
      </div>
    </div>
  </div>
</div>