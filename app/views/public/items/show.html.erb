<div class="container">
  <div class="row">
    <div class="col-xs-2">
      <!--</%= render 'layouts/search_side_bar', genres: @genres %>-->
    </div>
    <div class="col-xs-10">
      <div class="col-xs-4 ">
        <%= image_tag @item, :product_image,%><br>
      </div>
      <div class="col-xs-8 ">
        <div>
          <h1><%= @item.name %></h1><br>
          <h3><%= @item.introduction %></h3><br>
          <% if @item.validation == true %>
            <h2>¥<%= money_notation(@item.price*1.1) %>（税込）</h2><br>
          <% else %>
            <h2>soldout</h2><br>
          <% end %>
        </div>
        <% if @item.validation == true %>
          <!--</%= form_with(@cart_product, url: cart_products_path) do |f| %>-->
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.number_field :quantity, placeholder: "個数選択",class: 'btn btn-default',min: 1 %>
            <%= f.submit 'カートに入れる',class: 'btn btn-primary' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>