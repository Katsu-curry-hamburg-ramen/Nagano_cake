<div class="container">
  <div class="row">
      <div class="col-3 p-4">
        <%= render 'layouts/search_side_bar', genres: @genres %>
      </div>
    <div class="col-xs-10">
      <h3 class="m-4">商品一覧（全 <%= @quantity %> 件）</h3>
      <% @items.each do |item| %>
        <div class="col-xs-3 text-center ">
            <%= link_to public_item_path(item.id) do %>
              <%= image_tag item.get_product_image(200,200)%><br>
            <% end %>
            <%= item.name %><br>
            <% if item.is_active == true %>
                <%= item.price %>円     
            <% end %>
            <% if item.is_active == true %>
                販売中
            <% else %>
                売切れ
            <% end %>
        </div>
      <% end %>
      
      <div class="col-xs-6 col-xs-offset-3 ">
        <%#= paginate @items %>
      </div>
    </div>
  </div>
</div>