<div class="row">
  <div class="col-3"></div>
    <div class="col-5">
    <h2 class="my-4">マイページ</h2>
      <%= link_to "編集する", edit_public_customer_path, class:"btn btn-success my-3 ml-4" %>
        <table class="table my-3">
          <tr>
            <th>氏名</th>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <th>カナ</th>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postcode %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= @customer.phone_number %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
        <div class="btn btn-primary my-3 ml-4 col-2">配送先一覧</div>
        <div class="btn btn-primary my-3 ml-5 col-2">注文履歴一覧</div>
  </div>



  <div class="col-3"></div>
</div>