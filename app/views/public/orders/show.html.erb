<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        注文履歴詳細
      </h4>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-md-8 text-left">
      <h4 class="font-weight-bold">
        注文情報
      </h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">注文日</th>
            <td><%= @order.created_at.strftime("%Y/ %m/ %d") %></td>
          </tr>
          <tr>
            <th class="bg-light">配送先</th>
            <td>
              〒<%= @order.postcode %></br>
              <%= @order.address %></br>
              <%= @order.name %>
            </td>
          </tr>
          <tr>
            <th class="bg-light">支払方法</th>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <th class="bg-light">ステータス</th>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-4-auto">
      <h4 class="font-weight-bold">
        請求情報
      </h4>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <% @order_items.each do |order_item| %>
            <% @subtotal = order_item.item.with_tax_price * order_item.quantity %>
            <% @total_price += @subtotal %>
            <% end %>
            <th class="bg-light">商品合計</th>
            <td><%= @total_price %>円</td>
          </tr>
          <tr>
            <th class="bg-light">配送料</th>
            <td><%= @order.postage %>円</td>
          </tr>
          <tr>
            <th class="bg-light">ご請求額</th>
            <td><%= @total_price += @order.postage %>円</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-md-10">
      <h4 class="font-weight-bold">
        注文内容
      </h4>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_items.each do |order_item| %>
          <tr>
            <td><%= order_item.item.name %></td>
            <td><%= order_item.price %>円</td>
            <td><%= order_item.amount %></td>
            <td><%= @subtotal = order_item.item.with_tax_price * order_item.quantity %>円</td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>