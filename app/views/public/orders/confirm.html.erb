<h2>注文情報確認</h2>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %> </td>
            <td><%= cart_item.item.with_tax_price %></td>
            <td><%= cart_item.quantity %> </td>
            <td><%= cart_item.subtotal %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-4">
      <table class="table">
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>商品合計</th>

          <td>
          <% @cart_items.each do |cart_item| %>
            <% @total_price += cart_item.subtotal %>
          <% end %>
          <%= ( @total_price) %>
          </td>
        </tr>
        <tr>
          <th>請求金額</th>
          <td><%= @order.postage + @total_price %></td>
        </tr>
      </table>
    </div>
  </div>

    <div>
      <p>支払方法 : <%= @order.payment_method_i18n %></p>
    </div>
    <div>
      <p>お届け先 : 〒<%= @order.postcode %><%= @order.address %><br>
      <%= @order.delivery_name %>
    </div>


    <div>
    <%= form_with model: @order, url: orders_path, method: :post, local: true do |f| %>
      <%= f.hidden_field :name %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :payment_method %>
      <%= f.hidden_field :postcode %>
      <%= f.hidden_field :,total_payment, value: @total_price %>
      <%= f.submit "注文を確定する", class:"btn btn-success" %>
    <% end %>
    </div>